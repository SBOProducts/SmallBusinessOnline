@{
    string url = Request.Url.PathAndQuery.ToString();
    bool Home = url == "/";
    bool About = url.StartsWith("/Home/About");
    bool Contact = url.StartsWith("/Home/Contact");
    bool Products = url.StartsWith("/Products");
    bool Services = url.StartsWith("/Services");
    bool Projects = url.StartsWith("/Projects");
}

<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
        <a href="@Url.Action("Index", "Home")">
            <img src="@Url.Content("~/Images/Logo-small.png")" alt="Small Business Online" />
        </a>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
        <li @if(Home){<text>class="active"</text>}>@Html.ActionLink("Home", "Index", "Home")</li>
        <li @if (Products){<text>class="active"</text>}>@Html.ActionLink("Products", "Index", "Products")</li>
        <li @if(Services){<text>class="active"</text>}>@Html.ActionLink("Services", "Index", "Services")</li>
        <li @if(Projects){<text>class="active"</text>}>@Html.ActionLink("Projects", "Index", "Projects")</li>
        <li @if(About){<text>class="active"</text>}>@Html.ActionLink("About", "About", "Home")</li>
        <li @if(Contact){<text>class="active"</text>}>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <li><a href="@Url.Action("Index", "Home")">Small Business Online</a></li>
    </ul>
  </section>
</nav>
